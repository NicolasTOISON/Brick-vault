---
import Layout from '../layouts/Layout.astro'
import BarcodeScanner from '../components/BarcodeScanner.astro'
import LegoSetList from '../components/LegoSetList.astro'
---

<Layout title="LEGO Collection Manager">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">LEGO Collection Manager</h1>

    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Scan Barcode</h2>
      <BarcodeScanner />
    </div>

    <div>
      <h2 class="text-2xl font-bold mb-4">Your Collection</h2>
      <LegoSetList />
    </div>
  </main>
</Layout>
