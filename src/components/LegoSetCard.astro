---
interface Props {
  set_number: string
  name: string
  pieces: number
  year: number
  theme: string
}

const { set_number, name, pieces, year, theme } = Astro.props
---

<div class="bg-white p-4 rounded-lg shadow hover:shadow-lg transition-shadow">
  <h3 class="text-lg font-bold">{name}</h3>
  <p class="text-gray-600">Set #{set_number}</p>
  <div class="mt-2 space-y-1">
    <p class="text-sm">Pieces: {pieces}</p>
    <p class="text-sm">Year: {year}</p>
    <p class="text-sm">Theme: {theme}</p>
  </div>
</div>
